<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>f43.me</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link rel="stylesheet" href="/build/main.css" />

    <script type="text/javascript" src="/build/zepto.modernizr.js"></script>
</head>
<body>
    <nav class="top-bar">
        <ul class="title-area">
            <li class="name">
                <h1><a href="{{ path('feed_publicview') }}">f43.me</a></h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
        </ul>

        <section class="top-bar-section">
            <ul class="right">
                <li class="has-form">
                    <a class="success button" href="{{ path('login') }}">Login</a>
                </li>
            </ul>
        </section>
    </nav>

    <div class="row">
        <div class="large-5 large-centered columns">
            <fieldset>
                <legend>Secured area</legend>
                {% if error %}
                    <div data-alert class="alert-box alert radius">{{ error.message }}</div>
                {% endif %}

                <form action="{{ path('login_check') }}" method="post" class="custom">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" />

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password" />

                    <button class="button expand" type="submit">Login</button>
                </form>
            </fieldset>
        </div>
    </div>

    <script type="text/javascript" src="/build/foundation.app.js"></script>

    <script>
        $(document).foundation();
    </script>
</body>
</html>
